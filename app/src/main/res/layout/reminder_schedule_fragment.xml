<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/reminder_schedule_header_layout"
        android:layout_below="@id/confidential_declaration"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reminder_schedule_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/SectionHeader"
            android:text="@string/reminder_schedule"
            android:textAllCaps="true"/>

        <ImageView
            android:id="@+id/plus_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:src="@drawable/ic_add_cat"
            android:layout_marginTop="15dp" />

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_below="@id/reminder_schedule_header_layout"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ff4f4f4f"/>


    <ListView
        android:id="@+id/reminder_list"
        android:layout_below="@id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>


    <Button
        android:id="@+id/save_task_button"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:text="@string/save_button"
        style="@style/BlueButton"/>

</RelativeLayout>
