<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#ff4f4f4f</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SectionHeader" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ActionButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="GreyButton" parent="ActionButton">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/grey_button</item>
    </style>


    <style name="BlueButton" parent="ActionButton">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/blue_button</item>
    </style>

    <style name="PickerButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:shadowColor">#ff414141</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">#ffe4e4e4</item>
        <item name="android:background">@drawable/picker_button</item>
    </style>

</resources>
